# TalentScout AI Hiring Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Alternative AI Provider Configuration
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
APP_NAME=TalentScout
APP_VERSION=1.0.0
DEBUG_MODE=False

# Data Storage Configuration
DATA_DIRECTORY=candidate_data
EXPORT_FORMAT=json

# Security Configuration
HASH_SALT=your_random_salt_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=talentscout.log

# UI Configuration
THEME=light
MAX_CHAT_HISTORY=100
AUTO_SAVE=True

# Rate Limiting (requests per minute)
API_RATE_LIMIT=60

# Feature Flags
ENABLE_DATA_EXPORT=True
ENABLE_CONVERSATION_RESET=True
ENABLE_PROGRESS_TRACKING=True
ENABLE_FALLBACK_QUESTIONS=True
